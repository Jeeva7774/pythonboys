rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // User avatars - users can only upload their own avatar
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true; // Avatars are publicly readable
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 5 * 1024 * 1024 && // 5MB limit
        request.resource.contentType.matches('image/.*');
    }
    
    // Community banners - community moderators can upload
    match /communities/{communityId}/banner {
      allow read: if true; // Banners are publicly readable
      allow write: if request.auth != null &&
        request.resource.size < 10 * 1024 * 1024 && // 10MB limit
        request.resource.contentType.matches('image/.*');
        // Note: Additional validation for community moderator status 
        // should be done in Cloud Function
    }
    
    // Post images - authenticated users can upload
    match /posts/{communityId}/{postId}/{fileName} {
      allow read: if true; // Post images are publicly readable
      allow write: if request.auth != null &&
        request.resource.size < 10 * 1024 * 1024 && // 10MB limit
        request.resource.contentType.matches('image/.*');
    }
    
    // Skill/course content - read-only for users
    match /skills/{skillId}/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Admin-only via console
    }
    
    // Puzzle images and assets
    match /puzzles/{puzzleId}/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Admin-only via console
    }
    
    // User exports (CSV, etc.) - user-specific
    match /exports/{userId}/{fileName} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }
    
    // App assets (icons, illustrations, etc.) - read-only
    match /assets/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Admin-only via console
    }
  }
}
